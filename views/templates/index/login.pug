extend ../layout

block vars
  - var isLogin = true

append scripts
  script.
    Teresa.login.init();

block content
  div
    div.container
      img.logo--landing(src=`${staticPrefix}images/logo-centered-inverse.png`)
      div.row
        div.col-md-6.offset-md-3
          div.card.card-block
            div.card-title
              h4.text-center Login
            form(name="login")
              div.row
                div.col-md-12.form-group
                  label Email
                  input.form-control(type="text", name="email")
                div.col-md-12.form-group
                  label Password
                  input.form-control(type="password", name="password")
                div.col-md-12
                  a.js-login.btn.btn-block.btn-success(href="javascript:;") Login